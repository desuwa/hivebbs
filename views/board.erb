<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <%= erb :assets %>
  <title>/<%= @board[:slug] %>/ - <%= @board[:title] %></title>
</head>
<body>
<div id="content">
<ul id="nav"><li><a href="#post-form">New thread</a></li>
  <li class="tce">—</li>
<% DB[:boards].each do |board| %>
  <li>/<a title="<%= board[:title] %>" href="/<%= board[:slug] %>/"><%= board[:slug] %></a>/</li>
<% end %>
</ul>
<%
forced_anon = false
anon = cfg(:anon)
time_format = t(:time_format)
%>
<h1 id="title"><%= @board[:title] %></h1>
<ul id="threads" class="list section">
  <% if @threads.empty? %>
  <li>This board has no threads.</li>
  <% else %>
  <% @threads.each do |thread| %>
    <li><a class="rc" href="/<%= @board[:slug] %>/read/<%= thread[:num] %>">»</a><a href="/<%= @board[:slug] %>/read/<%= thread[:num] %>"><%= thread[:title] %></a><span class="pc">(<%= thread[:post_count] %>)</span></li>
  <% end %>
  <% end %>
</ul>
<%= erb :form %>
</div>
<%= erb :footer %>
</body>
</html>
